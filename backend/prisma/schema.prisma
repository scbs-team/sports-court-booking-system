generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Court {
  id       Int       @id @default(autoincrement())
  name     String
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  courtId   Int
  startTime DateTime
  endTime   DateTime
  court     Court    @relation(fields: [courtId], references: [id])
}
