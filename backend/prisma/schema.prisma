generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Court {
  id       String    @id @default(uuid())  // Changed from Int to String with UUID
  name     String
  bookings Booking[]
}

model Booking {
  id        String        @id @default(uuid())  // Changed from Int to String with UUID
  courtId   String        // Changed from Int to String
  startTime DateTime
  endTime   DateTime
  status    BookingStatus @default(PENDING)

  court Court @relation(fields: [courtId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courtId, startTime, endTime])
}

enum Role {
  CUSTOMER
  ADMIN  // Consider adding admin role
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String   @unique
  passwordHash String
  role         Role     @default(CUSTOMER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
